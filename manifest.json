{
  "manifest_version": 3,
  "name": "CSV Editor & Viewer",
  "version": "2.0",
  "description": "View, edit and export CSV files with light/dark mode support",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_title": "Open CSV Viewer"
  },
  "background": {
    "service_worker": "assets/js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*.csv", "*://*/*.csv?*"],
      "js": ["assets/js/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["viewer.html", "assets/js/viewer.js", "assets/css/viewer.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "assets/images/icon16.png",
    "48": "assets/images/icon48.png",
    "128": "assets/images/icon128.png"
  }
}
